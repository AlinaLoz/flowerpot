{
    "name": "flowerpot",
    "description": "TFS Query watch tool",
    "author": {
        "name": "Valery Murashko",
        "url": "https://github.com/Emestie"
    },
    "homepage": ".",
    "main": "public/electron.js",
    "build": {
        "productName": "Flowerpot",
        "appId": "mst.flowerpot",
        "files": [
            "_icons/**/*",
            "build/**/*"
        ],
        "win": {
            "icon": "build/favicon.ico"
        },
        "publish": {
            "provider": "github"
        }
    },
    "version": "0.2.0-0",
    "dependencies": {
        "@trodi/electron-splashscreen": "^0.3.4",
        "electron-updater": "^4.1.2",
        "electron-is-dev": "^1.1.0"
    },
    "devDependencies": {
        "@types/jest": "24.0.18",
        "@types/node": "12.7.4",
        "@types/preval.macro": "^3.0.0",
        "@types/react": "16.9.2",
        "@types/react-dom": "16.9.0",
        "electron": "^6.0.7",
        "electron-builder": "^21.2.0",
        "foreman": "^3.0.1",
        "mobx": "^5.13.0",
        "mobx-react": "^6.1.3",
        "node-sass": "^4.12.0",
        "preval.macro": "^3.0.0",
        "react": "^16.9.0",
        "react-contextmenu": "^2.11.0",
        "react-dom": "^16.9.0",
        "react-scripts": "3.1.1",
        "semantic-ui-css": "^2.4.1",
        "semantic-ui-react": "^0.88.0",
        "typescript": "3.6.2"
    },
    "scripts": {
        "dev": "nf start",
        "start": "react-scripts start",
        "electron": "electron .",
        "build-react": "react-scripts build && DEL /S /Q .\\build\\*.map && copy .\\build\\index.html .\\build\\firebase-entry-point.html",
        "bulid-electron": "npm run build-react && electron-builder -w --publish never",
        "deploy-react": "npm run build-react && firebase deploy",
        "deploy-electron": "npm run build-react && electron-builder -w --publish always"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
